#!/bin/sh

set -e

umask 077

basedir=~/.silkcoin
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/silkcoin.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# Silkcoin does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/silkcoin/silkcoin-qt "$@"
